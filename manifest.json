{
  "manifest_version": 3,
  "name": "Gmail Refund Tracker",
  "version": "0.1.0",
  "description": "Find and highlight online purchases you are returning and track pending refunds.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Refund Tracker"
  },
  "oauth2": {
    "client_id": "971984784870-vbpd3tsggr0vnn17o4h4gdltl9ntt5k3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  }
}